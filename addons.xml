<addon
	id="plugin.video.imoviemax"
	name="imoviemax.se"
	version="1.0.0"
	provider-name="undesignated">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
	<import addon="script.module.addon.common" />
	<import addon="script.module.metahandler" version="2.5.1"/>
	<import addon="script.module.requests" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Stream Free content from imoviemax.se</summary>
    <description lang="en">Stream free content from imoviemax.se</description>
	<disclaimer lang="en">The author does not host or distribute any of the content displayed by this addon or have any affiliation with the website owners</disclaimer>
    <platform>all</platform>
  </extension>
</addon>

<addon
	id="repository.undesignated"
	name="undesignated Add-on repository"
	version="1.0.0"
	provider-name="undesignated">
	<extension point="xbmc.addon.repository" name="undesignated Add-on repository">
		<dir>
			<info compressed="false">http://raw.github.com/undesignated/repository.undesignated/master/addons.xml</info>
			<checksum>http://raw.github.com/undesignated/repository.undesignated/master/addons.xml.md5</checksum>
			<datadir zip="true">http://raw.github.com/undesignated/repository.undesignated/master/zips</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Install Add-ons from undesignated</summary>
		<description lang="en">Download and install add-ons.</description>
		<platform>all</platform>
	</extension>
</addon>

